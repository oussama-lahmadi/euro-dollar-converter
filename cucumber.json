{
  "default": {
    "paths": [
      "e2e/features/"
    ],
    "require": [
      "e2e/step_definitions/**/*.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "format": [
      [
        "html",
        "cucumber-report.html"
      ],
      "summary",
      "progress-bar",
      "json:./cucumber-report.json"
    ]
  }
}